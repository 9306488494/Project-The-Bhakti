<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
android:background="@color/app_back"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardMain"
    app:cardElevation="15dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/app_back"
    app:cardPreventCornerOverlap="true"
    android:layout_marginBottom="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/app_back"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImgLoad"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:layout_marginLeft="5dp"

                android:focusable="true"
                android:src="@drawable/astrology" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="3dp"
                android:gravity="left|center"
                android:lines="3"
                android:text="asdsa f dsf sd fsd f sd fs d fs df ds f sdf sd f sd fs df sd f sdf sd f ds f sd fs df sd f sd f dsf ds f ds f ds fs df sd f ds f sd fs df ds f ds fsd f"
                android:textColor="@color/app_white"
                android:textSize="17dp"
                android:textStyle="bold" />


        </LinearLayout>
</android.support.v7.widget.CardView>



</LinearLayout>