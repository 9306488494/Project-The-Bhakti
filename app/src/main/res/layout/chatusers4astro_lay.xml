<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fcfcfc">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardUsers"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="3dp"
        app:cardElevation="11dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="#5ba170">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:textSize="19dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/chat_user"
        android:textStyle="bold"
        android:textColor="#050505"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMobile"
            android:drawableLeft="@drawable/mobile"
            android:text="Loading Contacts..."
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#fcfcfc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                app:cardElevation="14dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#df0526"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:id="@+id/badge"/>
            </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtState"
            android:textSize="17dp"
            android:drawableLeft="@drawable/home"
            android:textColor="#fcfdfd"
            android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#fbfcfc"
            android:gravity="center"
            android:orientation="vertical">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:id="@+id/delete"
        android:background="#fcfdfd"
        android:layout_gravity="center"
        android:src="@drawable/delete"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="DELETE"/>
        </LinearLayout>
</LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>