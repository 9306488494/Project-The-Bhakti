<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_back"    >
    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:src="@drawable/astro_login"

        android:id="@+id/astro_login"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"

        android:text="Chat to Astrologers"
        android:layout_gravity="center"
        android:textColor="#ce8d14"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnReg"
        android:textSize="22dp"
        android:layout_marginBottom="10dp"

        android:textColor="@color/adapter_space"
        android:textAllCaps="false"
        android:background="@color/green"
        android:drawableLeft="@drawable/left_reg"
        android:text="Register (New Users)"/>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="@drawable/back"
     android:layout_marginBottom="3dp">

 </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textSize="18dp"
            android:background="#ead6ae"
            android:layout_marginBottom="3dp"
            android:textColor="@color/app_white"
            android:textAlignment="center"
            android:hint="Enter Your name"
            android:id="@+id/textUsername"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="phone"
            android:background="#ead6ae"
            android:layout_marginBottom="3dp"
            android:textColor="@color/app_white"
            android:textAlignment="center"
            android:maxLength="10"
            android:hint="Enter Mobile Number"
            android:id="@+id/textMobile"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textAlignment="center"
            android:background="#ead6ae"
            android:layout_marginBottom="15dp"
            android:textColor="@color/app_white"
            android:hint="Enter City"
            android:id="@+id/textMail"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="2"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnReset"
                android:layout_weight="1"
                android:background="@color/red"
                android:textSize="22dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/adapter_space"
                android:text="Reset"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnSave"
                android:layout_weight="1"
                android:textSize="22dp"
                android:textColor="@color/adapter_space"
                android:background="@color/green"
                android:text="Register"/>

        </LinearLayout>

    </LinearLayout>
